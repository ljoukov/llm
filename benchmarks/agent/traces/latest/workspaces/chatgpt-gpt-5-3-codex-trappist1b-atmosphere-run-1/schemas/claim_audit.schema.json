{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "schemas-claim_audit",
  "type": "object",
  "properties": {
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "claim_id": {
            "type": "string",
            "pattern": "^C[0-9]{2}$"
          },
          "claim": {
            "type": "string",
            "minLength": 20
          },
          "strength": {
            "type": "string",
            "enum": [
              "strong",
              "moderate",
              "tentative"
            ]
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "quote": {
                  "type": "string",
                  "minLength": 10
                },
                "line_ref": {
                  "type": "string",
                  "pattern": "^L[1-9]\\d*$"
                }
              },
              "required": [
                "quote",
                "line_ref"
              ],
              "additionalProperties": false
            },
            "minItems": 2,
            "maxItems": 3
          },
          "caveat": {
            "type": "string",
            "minLength": 20
          }
        },
        "required": [
          "claim_id",
          "claim",
          "strength",
          "evidence",
          "caveat"
        ],
        "additionalProperties": false
      },
      "minItems": 4,
      "maxItems": 10
    }
  },
  "required": [
    "claims"
  ],
  "additionalProperties": false
}
