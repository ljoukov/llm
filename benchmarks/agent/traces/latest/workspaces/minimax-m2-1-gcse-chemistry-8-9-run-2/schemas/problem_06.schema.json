{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "schemas-problem_06",
  "type": "object",
  "properties": {
    "problem_id": {
      "type": "string",
      "pattern": "^P[0-9]{2}$"
    },
    "final_answer": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "units": {
          "type": "string",
          "minLength": 1
        },
        "precision_note": {
          "type": "string",
          "minLength": 8,
          "maxLength": 220
        }
      },
      "required": [
        "value",
        "units",
        "precision_note"
      ],
      "additionalProperties": false
    },
    "method": {
      "type": "string",
      "minLength": 120,
      "maxLength": 3000
    },
    "key_equations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1,
      "maxItems": 5
    },
    "line_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^L[1-9]\\d*$"
      },
      "minItems": 1,
      "maxItems": 4
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10
      },
      "minItems": 1,
      "maxItems": 4
    }
  },
  "required": [
    "problem_id",
    "final_answer",
    "method",
    "key_equations",
    "line_refs",
    "checks"
  ],
  "additionalProperties": false
}
